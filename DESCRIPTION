    MASS (>= 7.3-51.4),
    RColorBrewer (>= 1.1-2),
    Rcpp (>= 1.0.3),
    SOAR (>= 0.99-11),
    stringi (>= 1.4.3),
    stats,
    grDevices,
    methods,
    graphics,
    utils,
